@{
	// UserControl Index
	ViewData["Title"] = "DeliveryOrders";
}

<div>

	<!-- Add form -->
	<form id="add" action="/DeliveryOrder/@ViewBag.AddMethod" method="post" class="d-none">
		<h4>Add @ViewBag.Title</h4>

		<div class="form-group">
			<label for="reference">Reference</label>
			<input type="text" class="form-control" id="reference" name="reference" />
		</div>

		<div class="form-group">
			<label for="customer">Customer</label>
			<select class="form-control" id="customer" name="customer" data-placeholder="Choose a Customer" tabindex="2">
				<option value="">-</option>
				@foreach (Customer customer in ViewBag.Customers)
				{
					<option value="@customer.ID" @if()>@customer.Name</option>
				}
			</select>
		</div>

		<div class="form-group">
			<label for="vessel">Vessel</label>
			<select class="form-control" id="vessel" name="vessel" data-placeholder="Choose a Vessel" tabindex="2">
				<option value="">-</option>
				@foreach (Vessel vessel in ViewBag.Vessels)
				{
					<option value="@vessel.ID">@vessel.Name</option>
				}
			</select>
		</div>

		<div class="form-group">
			<label for="container">Container</label>
			<select class="form-control" id="container" name="container" data-placeholder="Choose a Container" tabindex="2">
				<option value="">-</option>
				@foreach (Container container in ViewBag.Containers)
				{
					<option value="@container.ID">@container.Name</option>
				}
			</select>
		</div>

		<div class="form-group">
			<label for="weight">Weight</label>
			<input type="text" class="form-control" id="weight" name="weight" />
		</div>

		<div class="form-group">
			<label for="arrivalDate">Arrival Date</label>
			<div class="input-group">
				<input type="date" class="form-control" id="arrivalDate" name="arrivalDate" />
				<input type="time" class="form-control" id="arrivalTime" name="arrivalTime" />
			</div>
		</div>

		<button class="btn btn-primary">Add</button>
		<button class="btn btn-danger" onclick="$('#show-add').removeClass('d-none'); $('#add').addClass('d-none'); return false;">Cancel</button>
	</form>

	<!-- Edit form -->
	<form id="edit" action="/DeliveryOrder/@ViewBag.EditMethod" method="post" class="d-none">
		<h4>Edit @ViewBag.Title</h4>
		<input type="hidden" id="id" name="id" value="" />

		<div class="form-group">
			<label for="reference">Reference</label>
			<input type="text" class="form-control" id="reference" name="reference" />
		</div>

		<div class="form-group">
			<label for="customer">Customer</label>
			<select class="form-control" id="customer" name="customer" data-placeholder="Choose a Customer" tabindex="2">
				<option value="">-</option>
				@foreach (Customer customer in ViewBag.Customers)
				{
					<option value="@customer.ID">@customer.Name</option>
				}
			</select>
		</div>

		<div class="form-group">
			<label for="vessel">Vessel</label>
			<select class="form-control" id="vessel" name="vessel" data-placeholder="Choose a Vessel" tabindex="2">
				<option value="">-</option>
				@foreach (Vessel vessel in ViewBag.Vessels)
				{
					<option value="@vessel.ID">@vessel.Name</option>
				}
			</select>
		</div>

		<div class="form-group">
			<label for="container">Container</label>
			<select class="form-control" id="container" name="container" data-placeholder="Choose a Container" tabindex="2">
				<option value="">-</option>
				@foreach (Container container in ViewBag.Containers)
				{
					<option value="@container.ID">@container.Name</option>
				}
			</select>
		</div>

		<div class="form-group">
			<label for="weight">Weight</label>
			<input type="text" class="form-control" id="weight" name="weight" />
		</div>

		<div class="form-group">
			<label for="arrivalDate">Arrival Date</label>
			<div class="input-group">
				<input type="date" class="form-control" id="arrivalDate" name="arrivalDate" />
				<input type="time" class="form-control" id="arrivalTime" name="arrivalTime" />
			</div>
		</div>


		<button class="btn btn-primary">Edit</button>
		<button class="btn btn-danger" onclick="$('#show-add').removeClass('d-none'); $('#edit').addClass('d-none'); return false;">Cancel</button>
	</form>


	<button id="show-add" class="btn btn-primary" onclick="$('#add').removeClass('d-none'); $('#show-add').addClass('d-none');">Add</button>

</div>

<hr />

<h4>@ViewData["Title"]</h4>

<div>
	<table id="table" class="table table-striped table-bordered table-hover">
		<thead class="thead-dark">
			<tr align="center">
				<th>Reference</th>
				<th>Customer</th>
				<th>Vessel</th>
				<th>Container</th>
				<th>Weight</th>
				<th>Arrival Date</th>
				<th>Creation Date</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
		@foreach (var da in ViewBag.Data)
		{
			<tr>
				<td>@da.Reference</td>
				<td>@Customer.Get(da.Customer).Name</td>
				<td>@Vessel.Get(da.Vessel).Name</td>
				<td>@Container.Get(da.Container).Name</td>
				<td>@da.Weight</td>
				<td>@da.ArrivalDate.ToString()</td>
				<td>@da.Created.ToString()</td>
				<td align="center">
					<button type="button" class="edit-data btn btn-primary" onclick="Edit('@da.ID','@da.Reference','@da.Customer','@da.Vessel','@da.Container','@da.Weight','@da.ArrivalDate.AddDays(1).ToString("yyyy-MM-ddTHH:mm:ssZ")');">
						<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-pencil-square" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
							<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
							<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
						</svg>
					</button>
				</td>
				<td align="center">
					<button type="button" class="delete-data btn btn-primary" onclick="Delete('@da.ID','@da.Reference')">
						<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
							<path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
							<path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
						</svg>
					</button>
				</td>
			</tr>
		}
		</tbody>
	</table>
</div>
<link type="text/css" rel="stylesheet" href="//cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
<script type="text/javascript" src="//cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
<link href="https://select2.github.io/select2-bootstrap-theme/css/select2-bootstrap.css" rel="stylesheet" />
<script src="//cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.full.js"></script>

<script type="text/javascript">
	function Edit(id, reference, customer, vessel, container, weight, arrivalDate) {
		var date = new Date(arrivalDate);
		$("#edit").removeClass("d-none");
		$("#add").addClass("d-none");
		$("#show-add").addClass("d-none");
		$("#id").val(id);
		$("#edit #reference").val(reference);
		$("#edit #customer").val(customer).trigger('change');
		$("#edit #vessel").val(vessel).trigger('change');
		$("#edit #container").val(container).trigger('change');
		$("#edit #weight").val(weight);
		$("#edit #arrivalDate").val(date.dateFormat());
		$("#edit #arrivalTime").val(date.timeFormat());
	}
	function Delete(ID, Name) {
		if (confirm(`Delete ${Name}?`)) {
			window.location = `/User/@ViewBag.DeleteMethod/${ID}`;
		}
	}
	$("#table").DataTable({
		scrollY: '400px',
		scrollCollapse: true,
		paging: true
	});
	$("#add #customer").select2({
		theme: "bootstrap",
		containerCssClass: ':all:'
	});
	$("#add #vessel").select2({
		theme: "bootstrap",
		containerCssClass: ':all:'
	});
	$("#add #container").select2({
		theme: "bootstrap",
		containerCssClass: ':all:'
	});
	$("#edit #customer").select2({
		theme: "bootstrap",
		containerCssClass: ':all:'
	});
	$("#edit #vessel").select2({
		theme: "bootstrap",
		containerCssClass: ':all:'
	});
	$("#edit #container").select2({
		theme: "bootstrap",
		containerCssClass: ':all:'
	});
</script>